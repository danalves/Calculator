<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.logonrm.calculator.fragments.CalcFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvCalcResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:textSize="70sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20">

            <TextView
                android:id="@+id/tvCalc7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="7"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalc8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="8"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalc9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="9"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalcDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="รท"
                android:textSize="70sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20">

            <TextView
                android:id="@+id/tvCalc4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="4"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalc5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="5"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalc6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="6"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalcMult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="X"
                android:textSize="70sp"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20">

            <TextView
                android:id="@+id/tvCalc1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="1"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalc2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="2"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalc3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="3"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalcSub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="-"
                android:textSize="70sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20">

            <TextView
                android:id="@+id/tvCalcApagar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="C"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalc0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="0"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalcPonto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="."
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCalcAdi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="+"
                android:textSize="70sp"
                android:gravity="center"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20">

            <TextView
                android:id="@+id/tvCalcIgual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="70sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
